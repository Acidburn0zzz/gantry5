{% extends "partials/tease.html.twig" %}

{% block content %}

    <h2 class="h2"><a href="{{post.link}}">{{post.title}}</a></h2>

    <p>{{ post.get_preview( gantry.config.content.blog.blog.excerpt.length|default( 55 ), false, gantry.config.content.blog.blog.readmore.text ) }}</p>

    {% if post.thumbnail.src %}
        <img src="{{post.thumbnail.src}}" />
    {% endif %}

{% endblock %}
